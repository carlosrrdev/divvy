template(x-if="$store.modalStore.splitResultsModalIsOpen")
  div(
    class="fixed inset-0 flex items-center justify-center z-20 p-6"
  )
    div(
      class="rounded-lg shadow-lg p-6 w-full max-w-lg modal-body"
      x-trap="$store.modalStore.splitResultsModalIsOpen"
    )
      div(class="flex justify-between items-center border-b dark:border-neutral-700 pb-3 mb-4")
        h3(class="text-lg font-medium") Results
        button(
          class="modal-top-close-btn"
          @click="$store.modalStore.handleSplitResultsModal()"
        )
          include icons/x
      p(class="mb-4 text-sm") All expenses split evenly between members
      div(class="flex gap-x-2")
        div(class="flex-1")
          h4(class="font-bold text-4xl mb-2" x-text="`$${$store.dvStore.divvySplitTotal}`")
          p(x-text="`Total expenses: $${$store.dvStore.divvyExpensesTotal}`")
        div(class="flex flex-col justify-end items-center pr-5")
          include animated-members
          p(x-text="$store.dvStore.divvyMembers.length" class="font-bold")
      div(class="flex justify-between mt-4")
        button(class="btn-secondary" @click="$store.modalStore.handleSplitResultsModal()") Go back
        button(class="btn-primary") Save results