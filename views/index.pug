div(
  class="w-full flex flex-col min-h-dvh bg-stone-100 dark:bg-neutral-900/80"
  x-data=""
)
  include includes/header
  main(class="flex flex-1")
    div(class="flex-1 flex flex-col justify-center items-center container mx-auto p-6")
      div(class="flex flex-col gap-y-2 w-full max-w-48")
